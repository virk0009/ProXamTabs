<?xml version="1.0" encoding="UTF-8"?>
<local1:BasePXTabsLayout  xmlns:local1="clr-namespace:Plugin.ProXamTabs.Shared"
                          xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Plugin.ProXamTabs.Shared.PXTabsView">
  <ContentView.Content>
        <Grid
            x:Name="tabViewGrid"
            Padding="0, 1, 0, 0"
            RowSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <StackLayout
                Grid.Row="0"
                x:Name="viewContainer"
                Orientation="Horizontal">
            </StackLayout>
            <StackLayout
                Grid.Row="1" 
                x:Name="viewBottomTabContainer"
                >
            </StackLayout>
            <local1:PXTabsLayout
                x:Name="tabsLayout"
                Grid.Row="2" />
        </Grid>
    </ContentView.Content>
</local1:BasePXTabsLayout>